#!/bin/bash
#
#   script - install - php - composer
#


    # | composer

        # export - home
        [ -z "$HOME" ] && export HOME='/root'

        # download - composer
        curl -sS https://getcomposer.org/installer | php

        # install - composer => bin
        mv 'composer.phar' '/usr/local/bin/composer'

    # composer |


