#!/bin/bash
#
#   script - install - php - 5.6
#


    # | apt

        # export - locale
        export LANG=en_US.UTF-8

        # install - pre-requisites
        apt-get install -q -y  software-properties-common

        # add - repo - ondrej
        add-apt-repository -y ppa:ondrej/php

        # update
        apt-get update

        # install - php
        apt-get -q -y install php5.6 php5.6-mcrypt php5.6-mbstring php5.6-curl php5.6-cli php5.6-mysql php5.6-gd php5.6-intl php5.6-xsl php5.6-zip

    # apt |


